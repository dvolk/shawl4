{% extends "base.jinja2" %}
{% block content %}

  {% if error_msg %}
    <div class="w3-panel w3-red">
      <h3>Error:</h3>
      <p>{{ error_msg }}</p>
    </div>
  {% endif %}

  <div class="w3-container w3-panel w3-white">
    <h2>New run submission</h2>
    <p>To start a new run please fill in the submission form:</p>
    <form method="POST">

      <div class="w3-container w3-pale-green" style="padding-bottom: 10px;">
      <label><h3>Run name</h3></label>
      <label>Enter a short name for you run</label>
      <input class="w3-input" type="text" name="run_name"></input>

      <label><h3>Input file path</h3></label>
      <label>Enter the absolute path to the input files directory (e.g. /home/username/myfastqfiles/).This should also contain a SLURM job file.</label>
      <input class="w3-input" type="text" name="run_local_dir"></input>
      </div>
      <p>
        <button class="w3-input w3-btn w3-blue">Submit</button>
      </p>
  </form>
      <p>
        <button class="w3-input w3-btn w3-red"><a href="{{ url_for('runs') }}">Cancel</a></button>
      </p>

  </div>


{% endblock content %}
